DEFINE PROCEDURE ''GOLDBACH?'' [N]:
BLOCK 0: BEGIN
	CELL(0) ⇐ 2;
	LOOP AT MOST N TIMES:
	BLOCK 1: BEGIN
		IF {PRIME? [CELL(0)]
		   AND PRIME? [MINUS [N,CELL(0)]]},
		      THEN:
		BLOCK 2: BEGIN
			OUTPUT ⇐ YES;
			QUIT BLOCK 0;
		BLOCK 2: END;
		CELL(0) ⇐ CELL(0) + 1;
	BLOCK 1: END;
BLOCK 0: END.
