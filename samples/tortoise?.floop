DEFINE PROCEDURE ''ODD?'' [N]:
BLOCK 0: BEGIN
	IF REMAINDER [N,2] = 1, THEN:
	OUTPUT ⇐ YES;
BLOCK 0: END.

DEFINE PROCEDURE ''TORTOISE?'' [N]:
BLOCK 0: BEGIN
	IF ODD? [N], THEN:
	BLOCK 1: BEGIN
		OUTPUT ⇐ TORTOISE-PAIR? [2,N];
		QUIT BLOCK 0;
	BLOCK 1: END;
	CELL(0) ⇐ 3;
	MU-LOOP:
	BLOCK 2: BEGIN
		IF TORTOISE-PAIR? [CELL(0),N], THEN:
		BLOCK 3: BEGIN
			OUTPUT⇐ YES;
			ABORT LOOP 2;
		BLOCK 3: END;
		CELL(0) ⇐ PRIME-BEYOND [CELL(0)];
	BLOCK 2: END;
BLOCK 0: END.
